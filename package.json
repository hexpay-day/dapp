{
	"name": "frontend",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"db:prepare": "yarn run db:start && yarn run db:migrate-up",
		"db:start": "docker compose up hexpayday-postgres-rw -d",
		"db:stop": "docker compose down",
		"db:migrate-down": "NODE_OPTIONS='--loader ts-node/esm' yarn run knex migrate:rollback --all",
		"db:migrate-down-last": "NODE_OPTIONS='--loader ts-node/esm' yarn run knex migrate:down",
		"db:migrate-rollback": "NODE_OPTIONS='--loader ts-node/esm' yarn run knex migrate:rollback",
		"db:migrate-reset": "yarn run db:migrate-down && yarn run db:migrate-up",
		"db:migrate-up": "NODE_OPTIONS='--loader ts-node/esm' yarn run knex migrate:latest",
		"db:migrate-make": "NODE_OPTIONS='--loader ts-node/esm' yarn run knex migrate:make",
		"db:seed-make": "NODE_OPTIONS='--loader ts-node/esm' yarn run knex seed:make",
		"db:seed": "NODE_OPTIONS='--loader ts-node/esm' yarn run knex seed:run",
		"dev": "vite dev",
		"start": "node build/index.js",
		"build": "vite build",
		"worker:start": "ts-node src/worker",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@swc/core": "^1.3.67",
		"@types/debug": "^4.1.8",
		"@types/lodash": "^4.14.195",
		"@types/uuid": "^9.0.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"dotenv": "^16.3.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"lodash": "^4.17.21",
		"postcss": "^8.4.24",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.2",
		"ts-node": "^10.9.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.6",
		"vitest": "^0.25.3"
	},
	"dependencies": {
		"@hexpayday/stake-manager": "^1.0.5",
		"@popperjs/core": "^2.11.8",
		"@sveltejs/adapter-node": "^1.0.0-next.106",
		"@types/axios": "^0.14.0",
		"@types/pg": "^8.10.2",
		"@types/yargs": "^17.0.24",
		"axios": "^1.4.0",
		"debug": "^4.3.4",
		"ethers": "5",
		"flowbite": "^1.6.6",
		"flowbite-svelte": "^0.39.1",
		"graphql": "^16.7.1",
		"graphql-request": "^6.1.0",
		"knex": "^2.4.2",
		"knex-paginate": "^3.1.1",
		"pg": "^8.11.1",
		"svelte-add": "^2023.6.28-0.0",
		"svelte-twitter-widgets": "^0.1.0",
		"svelte-wagmi": "^0.3.2",
		"tailwind-merge": "^1.13.2",
		"uuid": "^9.0.0",
		"yargs": "^17.7.2"
	}
}
